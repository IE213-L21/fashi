<div id="wrapper">
    <!-- MAIN -->
    <div class="main">
        <!-- MAIN CONTENT -->
        <div class="main-content">
            <div class="container-fluid">
                <div class="container mt-4 mb-4">
                    <form method="post" action="/admin/update/{{product._id}}?_method=PUT"
                        enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter name" name="name" value="{{product.name}}">
                        </div>
                        <div class="form-group">
                            <label for="price">Price</label>
                            <input type="text" class="form-control" id="price" placeholder="Enter price" name="price" value="{{product.price}}">
                        </div>
                        <div class="form-group">
                            <label for="league">Select league</label>
                            <select class="form-control" name="league" id="league">
                                <option value="Premier League">Premier League</option>
                                <option value="Bundesliga">Bundesliga</option>
                                <option value="La Liga">La Liga</option>
                                <option value="Ligue 1">Ligue 1</option>
                                <option value="Seria A">Seria A</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="club">Club</label>
                            <input type="text" class="form-control" id="club" placeholder="Enter club" name="club" value="{{product.club}}">
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <input type="text" class="form-control" id="description" placeholder="Enter description"
                                name="description" value="{{product.description}}">
                        </div>
                        <div class="form-group">
                            <label for="image">Image</label>
                            <input type="file" name="image" class="form-control" id="image" />
                        </div>
                        <div class="form-group">
                            <label for="quantityOfSizeS">Quantity of size S</label>
                            <input type="text" class="form-control" id="quantityOfSizeS"
                                placeholder="Enter the quantity of size S" name="quantityOfSizeS" value="{{product.quantityOfSizeS}}">
                        </div>
                        <div class="form-group">
                            <label for="quantityOfSizeM">Quantity of size M</label>
                            <input type="text" class="form-control" id="quantityOfSizeM"
                                placeholder="Enter the quantity of size M" name="quantityOfSizeM" value="{{product.quantityOfSizeM}}">
                        </div>
                        <div class="form-group">
                            <label for="quantityOfSizeL">Quantity of size L</label>
                            <input type="text" class="form-control" id="quantityOfSizeL"
                                placeholder="Enter the quantity of size L" name="quantityOfSizeL" value="{{product.quantityOfSizeL}}">
                        </div>
                        <button type="submit" class="btn btn-primary">Update product</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </div>
    <!-- END MAIN -->
    <div class="clearfix"></div>
</div>