<div id="wrapper">
    <!-- MAIN -->
    <div class="main">
        <!-- MAIN CONTENT -->
        <div class="main-content">
            <div class="container-fluid">
                <div class="container-fluid mt-4 mb-4 ">
                    <form   name="container-form" method="POST" action="/product/handle-form-actions">
                        <div class="trash-product mt-0 mb-4">
                            
                            <h3 style="margin-top: 10px; margin-bottom: 26px;">Manage products</h3>
                            <div class="trash-add">
                                <a  href="product/trash-product" class="btn btn-danger"><i class="fa fa-trash-o"></i> Trash(0)</a>
                                <a  href="#" class="btn btn-primary"><i class="fa fa-plus-square"></i> Add product</a>
                            </div>
                            <div class="mt-4 d-flex align-items-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
                                        <label class="form-check-label" for="checkbox-all" style="margin: 0px 4px;">
                                            Sellect all
                                        </label>
                                    </div>
                                    <select class="form-control form-control-admin-edit1 form-control-sm checkbox-select-all-option" name="action" required="required">
                                        <option value="">-- Action --</option>
                                        <option value="delete">Delete</option>
                                    </select>
                                    <button class="btn btn-primary btn-sm check-all-submit-btn" disabled="disabled">Go</button>
                            </div>
                        </div>
                        <table class="table">
                            <thead> 
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Stt</th>
                                    <th scope="col">Name
                                    </th>
                                    <th scope="col">Price 
                                    </th>
                                    <th>Category</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Gender</th>
                                    <th scope="col">Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="productIds[]" value="{{this._id}}">
                                        </div>
                                    </td>
                                    <td scope="row">{{sum @index 1}}</td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.price}}</td>
                                    <td>{{this.category}}</td>
                                    <td>{{this.description}}</td>
                                    <td><img src="{{this.image}}" alt=""></td>
                                    <td>{{this.gender}}</td>
                                    <td>
                                        <a type="button" href="/product/{{this._id}}/edit-product" class="btn btn-link btn-outline-primary">Edit</a>
                                        <a type="button" id="btn-delete" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal" data-id="{{this._id}}">Delete</a>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="5" class="text-center">
                                    Store product is empty.
                                    <a href="/product/create-product">Add product</a>
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </form>
                </div>
                <div class="container-fluid">
                <!-- Modal -->
                <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Bạn có muốn xóa không ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-danger" id="btn-delete-product">Xóa</button>
                        </div>
                        </div>
                    </div>
                </div>
            </div>

            <form name="form-delete-product" method="POST" ></form>
            <form name="form-sort-product" method="GET" action=""></form>
            <script>
                document.addEventListener("DOMContentLoaded",function(){
                
                })

            </script>
            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </div>
    <!-- END MAIN -->
	<div class="clearfix"></div>
</div>
